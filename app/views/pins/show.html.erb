<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<div class="panel panel-default">
				<div class="panel-heading center">
					<%= image_tag @pin.image.url(:large), class: "img-responsive" %>
				</div>

				<div class="panel-body">
					<div class="pin-description"><%= @pin.description %></div>
					<div class="pin-info">
						<div class="pin-avatar pull-left">
							<%= image_tag @pin.user.gravatar_url %>
						</div>
						<div class="pin-links">
							<%= link_to @pin.user.profile_name, @pin.user if @pin.user %>
						</div>
					</div>
				</div>

				<div class="panel-footer">
					<div class="btn btn-default"><%= link_to 'Back', pins_path %></div>

					<% if @pin.user == current_user %>
			            <div class="actions pull-right">
			              <div class="pull-left">
			                <%= link_to edit_pin_path(@pin) do %>
			                	<div class="btn btn-default"><span class="glyphicon glyphicon-edit"></span>
			                	Edit 
			              		</div>
			                <% end %>
			              </div>

			              <div class="pull-right">
			                <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
			                	<div class="btn btn-default"><span class="glyphicon glyphicon-trash"></span>
			                	Delete
			              		</div>
			                <% end %>
			              </div>
			           </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>