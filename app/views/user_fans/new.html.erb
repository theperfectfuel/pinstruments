<div class="jumbotron">
	<div class="container panel panel-default center">
		<% if @fan %>
			<h1><%= @fan.profile_name %></h1>
			<p>Do you want to be <%= @fan.profile_name %>'s fan?</p>



			<%= form_for @user_fan, method: :post do |form| %>
				<div class="form form-actions">
					<% form.hidden_field :fan_id, value: @fan %>
					<%= submit_tag "Yes, Fan Request", class: 'btn btn-primary' %>
					<%= link_to "Cancel", profile_path(@fan), class: 'btn' %>

				</div>
			<% end %>

		<% end %>

	</div>
</div>